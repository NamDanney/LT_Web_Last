<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/styles/Location/MgtListLocation.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/styles/Location/LocationDetailPage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/styles/Location/WeatherSection.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/styles/Admin/admin.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <button class="admin-toggle-btn d-lg-none" type="button" aria-label="Toggle sidebar">
        <i class="bi bi-list"></i>
    </button>
    <div class="admin-sidebar-overlay d-lg-none"></div>
    <div class="admin-wrapper d-flex">
        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <div class="sidebar-header">
                <a asp-controller="Admin" asp-action="Index" class="text-decoration-none text-white">Admin Panel</a>
            </div>
            <ul class="nav flex-column admin-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Index">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="UserManagement">
                        <i class="bi bi-people-fill"></i>
                        <span>Quản lý người dùng</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="MgtListLocation">
                        <i class="bi bi-geo-alt-fill"></i>
                        <span>Quản lý địa điểm</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="ManagePlans">
                        <i class="bi bi-calendar-check"></i>
                        <span>Quản lý kế hoạch</span>
                    </a>
                </li>
            </ul>
            <div class="sidebar-footer mt-auto">
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary w-100">
                    <i class="bi bi-box-arrow-left me-2"></i>Về trang chính
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="admin-main-content flex-grow-1">
            <div class="container-fluid mt-4">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Sidebar toggle for responsive
        document.addEventListener('DOMContentLoaded', function () {
            const sidebar = document.querySelector('.admin-sidebar');
            const overlay = document.querySelector('.admin-sidebar-overlay');
            const toggleBtn = document.querySelector('.admin-toggle-btn');
            if (toggleBtn && sidebar && overlay) {
                toggleBtn.addEventListener('click', () => sidebar.classList.toggle('active'));
                overlay.addEventListener('click', () => sidebar.classList.remove('active'));
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>