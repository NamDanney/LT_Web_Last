<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Phú Yên Travel</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/styles/show/header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/styles/show/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/styles/HomePageCSS/HeroSection.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/styles/HomePageCSS/AboutSection.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/styles/HomePageCSS/TravelPlanSection.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/styles/HomePageCSS/TestimonialsSection.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/styles/HomePageCSS/DestinationsSection.css" asp-append-version="true" />


    <link rel="stylesheet" href="~/styles/Location/WeatherSection.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/styles/Location/LocationDetail.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/images/logo1.png" />
    <link rel="stylesheet" href="~/DA_Web.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false) 

</head>
<body>
    <partial name="_Header" />

    @* Thêm class main-content nếu CSS của bạn cần nó để tính toán padding cho header cố định *@
    <div class="main-content">
        <main role="main" class="pb-3" style="margin-bottom:0;padding-bottom:0;">
            @RenderBody()
        </main>
    </div>
    <partial name="_Footer" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/chatbot.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("_ChatWidget")
    <link rel="stylesheet" href="~/css/chatbot.css" />
</body>
</html>