

@model DA_Web.ViewModels.Locations.LocationCreateViewModel
@{
    ViewData["Title"] = "Thêm địa điểm mới";
}

<div class="mgt-location">
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
