@model IEnumerable<DA_Web.Models.Tour>
@{
    ViewData["Title"] = "Lập kế hoạch";
    int currentPage = (int)ViewData["CurrentPage"];
    int totalPages = (int)ViewData["TotalPages"];
}

<style>
    .plan-page {
        padding: 60px 0;
        background-color: #f8f9fa;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 1rem;
    }

    .section-subtitle {
        font-size: 1.1rem;
        color: #6c757d;
        max-width: 700px;
        margin: 0 auto;
    }

    .plan-actions {
        margin: 2rem 0;
    }

    .tour-card {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        height: 100%;
        margin-bottom: 20px;
    }

        .tour-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
        }

    .tour-image {
        height: 200px;
        overflow: hidden;
    }

        .tour-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 8px 8px 0 0;
        }

    .tour-duration {
        position: absolute;
        top: 10px;
        right: 10px;
        background: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 0.8rem;
    }

    .tour-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #333;
        min-height: 50px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .author-avatar {
        position: relative;
    }

    .author-initial {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-weight: bold;
        color: white;
        font-size: 0.7rem;
    }

    .author-name {
        font-size: 0.9rem;
        color: #666;
    }

    .tour-location, .tour-date {
        font-size: 0.85rem;
        color: #777;
    }

    .pagination .page-link {
        border-radius: 4px;
        margin: 0 3px;
    }

    .pagination .page-item.active .page-link {
        background-color: #007bff;
        border-color: #007bff;
    }
</style>

<section class="plan-page">
    <div class="container">
        <div class="text-center mb-5">
            <h1 class="section-title">Khám Phá Lịch Trình Phú Yên</h1>
            <p class="section-subtitle">Những chuyến đi được cộng đồng chia sẻ, đầy kỷ niệm thú vị và đang chờ bạn.</p>

            <!-- Chỉ cần thay đổi phần plan-actions trong Index.cshtml -->
            <div class="plan-actions mt-4">
                <a asp-controller="Plans" asp-action="Create" class="btn btn-primary rounded-pill me-2">
                    <i class="bi bi-calendar-plus"></i> Tạo Lịch Trình Mới
                </a>
                <a asp-controller="Plans" asp-action="MyPlans" class="btn btn-outline-primary rounded-pill">
                    <i class="bi bi-list-check"></i> Lịch Trình Của Tôi
                </a>
            </div>
        </div>

        <div class="row g-4">
            @if (Model != null && Model.Any())
            {
                foreach (var tour in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="tour-card">
                            <div class="tour-image position-relative">
                                <img src="@(!string.IsNullOrEmpty(tour.Image) ? tour.Image : "/images/default-tour.jpg")"
                                     alt="@tour.Destination" class="img-fluid rounded-top">
                                <div class="tour-duration">
                                    <i class="bi bi-clock"></i> @tour.Duration
                                </div>
                            </div>
                            <div class="tour-content p-3">
                                <div class="author-info d-flex align-items-center mb-2">
                                    <div class="author-avatar me-2">
                                        @if (tour.User != null)
                                        {
                                            <img src="@(!string.IsNullOrEmpty(tour.User.Avatar) ? tour.User.Avatar : "/images/user-avatar.png")"
                                                 alt="@tour.User.FullName" class="rounded-circle" style="width: 30px; height: 30px;">
                                        }
                                        else
                                        {
                                            <img src="/images/admin-avatar.png" alt="Administrator"
                                                 class="rounded-circle" style="width: 30px; height: 30px;">
                                        }
                                    </div>
                                    <div class="author-name">
                                        @(tour.User?.FullName ?? "Administrator")
                                    </div>
                                </div>
                                <h3 class="tour-title mb-2">@tour.Destination</h3>
                                <div class="tour-location mb-3">
                                    <i class="bi bi-geo-alt"></i> Khởi hành từ: @tour.DepartureFrom
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="tour-date">
                                        <i class="bi bi-calendar-date"></i> Đăng ngày: @tour.CreatedAt.ToString("dd/MM/yyyy")
                                    </div>
                                    <a asp-controller="Plans" asp-action="Details" asp-route-id="@tour.Id" class="btn btn-sm btn-outline-primary rounded-pill">
                                        Xem chi tiết <i class="bi bi-arrow-right"></i>
                                    </a>
                                    @* <a asp-controller="Plans" asp-action="Details" asp-route-id="@tour.Id">Xem chi tiết</a> *@
                                    @* <a href="/plans/details/@tour.Id">Xem chi tiết</a> *@
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center py-5">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        Hiện tại không có tour nào. Hãy quay lại sau!
                    </div>
                </div>
            }
        </div>

        @if (totalPages > 1)
        {
            <nav class="mt-5">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-controller="Plans" asp-action="Index" asp-route-page="@(currentPage - 1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" asp-controller="Plans" asp-action="Index" asp-route-page="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" asp-controller="Plans" asp-action="Index" asp-route-page="@(currentPage + 1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</section>

@section Scripts {
    <script>
        // Các chức năng JavaScript nếu cần
    </script>
}
