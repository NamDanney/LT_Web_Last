@using DA_Web.DTOs.Auth
@model ForgotPasswordDto
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/styles/Auth/account.css" />

<div class="auth-page">
    <div class="auth-wrapper single-column">
    <div class="auth-main">
        <div class="auth-box">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                }

            <div class="auth-header">
                <a asp-controller="Home" asp-action="Index" class="auth-brand">
                        <i class="fas fa-plane-departure"></i>
                    <span>PHÚ YÊN</span>
                </a>
                    <h1>Quên mật khẩu</h1>
                    <p>Nhập email của bạn để lấy lại mật khẩu</p>
            </div>

                <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="auth-form">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group">
                        <label asp-for="Email">Email</label>
                    <div class="input-group">
                            <i class="bi bi-envelope-fill icon"></i>
                            <input asp-for="Email" class="form-control" placeholder="Nhập địa chỉ email" required />
                    </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                    <button type="submit" class="btn-submit">Gửi</button>
            </form>

            <p class="auth-redirect">
                    Nhớ mật khẩu?
                    <a asp-controller="Account" asp-action="Login">Đăng nhập</a>
            </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
}