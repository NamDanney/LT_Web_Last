@{
    ViewData["Title"] = "Xác thực Email";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/styles/Auth/account.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="auth-page">
    <div class="auth-wrapper single-column">
    <div class="auth-main">
        <div class="auth-box">
            <div class="auth-header">
                <a asp-controller="Home" asp-action="Index" class="auth-brand">
                    <i class="bi bi-airplane-engines"></i>
                    <span>PHÚ YÊN</span>
                </a>
                    <h1>Xác thực Email</h1>
                    <p>Vui lòng kiểm tra email để lấy mã OTP.</p>
            </div>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                }
                
                <form asp-controller="Account" asp-action="VerifyEmail" method="post" class="auth-form">
                <div class="form-group">
                    <label for="otp">Mã OTP</label>
                    <div class="input-group">
                            <i class="fas fa-key"></i>
                            <input type="text" id="otp" name="otp" class="form-control" placeholder="Nhập mã OTP" required />
                        </div>
                    </div>
                    <button type="submit" class="btn-submit">Xác thực</button>
                </form>
                </div>
        </div>
    </div>
</div>